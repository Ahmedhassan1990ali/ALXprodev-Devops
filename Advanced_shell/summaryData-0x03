#!/bin/bash

# Output CSV file
output_file="pokemon_report.csv"

# Initialize CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Process each JSON file in pokemon_data directory
for file in pokemon_data/*.json; do
    # Extract data using jq
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert height (decimeters to meters) and weight (hectograms to kilograms)
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

# Sort CSV by name (excluding header) and overwrite the file
{
    head -n 1 "$output_file"
    tail -n +2 "$output_file" | sort
} > temp.csv && mv temp.csv "$output_file"

# Display CSV content
echo "CSV Report generated at: $output_file"
echo
cat "$output_file"
echo

# Calculate averages using awk
awk -F, '
NR>1 {
    height_sum += $2
    weight_sum += $3
    count++
}
END {
    printf "Average Height: %.2f m\n", height_sum / count
    printf "Average Weight: %.2f kg\n", weight_sum / count
}' "$output_file"